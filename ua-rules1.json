{
 "name": "AD-Capital",
 "comments": "Agents for AD-Capital",
 "config": {},
 "rules": [
   {
     "name": "rest-rule",
     "monitor": "java",
     "comments": "Update Java Agent for rest container",
     "config":
     {
       "version": "4.2.11.0",
       "state": "attached",
       "application_name": "$javaenv_APP_NAME",
       "tier_name": "$javaenv_TIER_NAME",
       "node_name": "$javaenv_NODE_NAME",
       "deploy_cmd": ".*jmxremote.*"
     },
     "condition": "network_hostname == 'AD-Capital-rest'"
   },
   {
     "name": "portal-rule",
     "monitor": "java",
     "comments": "Update Java Agent for portal container",
     "config":
     {
       "version": "4.2.10.1",
